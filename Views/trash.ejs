</head>

<body id="body">

<%- include('./partials/navbar.ejs') %>
<%- include('./partials/flashMsg.ejs') %>
  <section class="vh-100" style="background-color: #eee;" id="back-task">
    <div class="container py-5 h-100">
      <div class="slogan">
        <span> Plan your day, plan your tasks, plan your success.</span>
      </div>
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-lg-9 col-xl-7">
          <div class="card rounded-3">
            <div class="card-body p-4">
              

              <h4 class="text-center my-3 pb-3">Restore it your way ..</h4>

              

              <table class="table mb-4">
                <thead>
                  <tr>
                    <th scope="col">No.</th>
                    <th scope="col">Todo item</th>

                    <th scope="col" id="actions">Actions</th>
                  </tr>
                </thead>
                <tbody>


                  <% tasks.forEach( T=> { %>
                    <tr> 
                      <th scope="row">
                        <%=T.Task_ID%>
                      </th>
                      <td>
                        <%= T.Task_Body %>
                      </td>

                      <td>
                        <div class="global">
                          <div>
                            <form action="/tasks/<%=T.Task_ID %>/restore" method="post">
                              <button type="submit" class="btn btn-primary">Restore</button>
                            </form>
                          </div>
                          


                        </div>

                      </td>
                    </tr>

                    <%});%>






                </tbody>
              </table>

            </div>
          </div>
        </div>
      </div>
    </div>
   
    
  
  </section>









